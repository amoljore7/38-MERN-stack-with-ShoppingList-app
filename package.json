  "bugs": {
    "url": "https://github.com/amoljore7/38-MERN-stack-with-ShoppingList-app/issues"
  },
  "homepage": "https://github.com/amoljore7/38-MERN-stack-with-ShoppingList-app#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "concurrently": "^5.2.0",
    "config": "^3.3.1",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^3.5.9",
    "mongoose": "^5.9.21"
  },
  "devDependencies": {
    "nodemon": "^2.0.20"
  }
